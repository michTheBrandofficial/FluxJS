{
  "compilerOptions": {
    "target": "es2022",                                 
    "lib": [
      "dom", 
      "es2017"
    ],
    "module": "es2022",                      
    "baseUrl": "../",
    "outDir": "../nixix/",                                  
    "newLine": "lf",  
    "watch": true,  
    "paths": {
      "@types": [
        "types/index"
      ]
    },    
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true, 
    "noImplicitAny": true,                          
    "noUnusedLocals": true,  
    "noUnusedParameters": true, 
    "skipLibCheck": true                        
  }
}
