{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "baseUrl": "./",
    "paths": {
      // for tests it will be nixix/nixix/js-lib/nixix.js
      // but the real thing is node_modules/js-lib/nixix.js
      "@nixix": [
        "nixix/js-lib/nixix"
      ],
      "@nixix-render": [
        "nixix/js-lib/render"
      ],
      "@nixix-hooks": [
        "nixix/js-lib/hooks"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}